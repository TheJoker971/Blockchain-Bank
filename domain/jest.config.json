{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "roots": ["<rootDir>"],
  "testMatch": ["**/test/**/*.test.ts"],
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "useESM": true,
      "tsconfig": {
        "module": "ESNext"
      }
    }]
  }
}